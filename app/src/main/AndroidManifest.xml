<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.duan_appbanhang">
    <!-- Thêm quyền Internet ở đây -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:theme="@style/Theme.Duan_appbanhang"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".Activity.login.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SplashActivity"/>
        <activity android:name=".Activity.home.home_activity"/>
        <activity android:name=".Activity.home.chitietsp"/>
        <activity android:name=".Activity.home.activity_Menu"/>
        <activity android:name=".Activity.home.activity_cart" />
        <activity android:name=".Activity.home.OrderActivity"/>
        <activity android:name=".Activity.home.activity_thanhtoan"/>
        <activity android:name=".Activity.home.activity_voucher"/>
        <activity android:name=".Activity.login.SignUpActivity"/>
        <activity android:name=".Activity.login.VerificationActivity"/>
        <activity android:name=".Activity.login.ForgotPasswordActivity"/>
        <activity android:name=".Activity.login.ResetPasswordActivity"/>
        <activity android:name=".Activity.home.addressActivity"/>
    </application>

</manifest>