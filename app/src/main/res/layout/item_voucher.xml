<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="@android:color/white"
    android:layout_marginBottom="8dp"
    android:elevation="2dp">

    <!-- Biểu tượng (có thể thay bằng logo Shopee hoặc tùy chỉnh) -->
    <ImageView
        android:id="@+id/voucherIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/voucher"
        android:layout_marginEnd="12dp"/>

    <!-- Thông tin mã giảm giá -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/voucherDiscount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giảm 25%"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#D32F2F"/>

        <TextView
            android:id="@+id/voucherMinOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đơn tối thiểu đ100K"
            android:textSize="14sp"
            android:textColor="#666666"/>

        <TextView
            android:id="@+id/voucherCondition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Áp dụng cho: Táo Mỹ, Cam Sành"
            android:textSize="14sp"
            android:textColor="#666666"/>

        <TextView
            android:id="@+id/date_voucher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hết hạn: 30/04/2025"
            android:textSize="14sp"
            android:textColor="#666666"/>
    </LinearLayout>

    <!-- Checkbox để chọn mã -->
    <CheckBox
        android:id="@+id/voucherCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"/>
</LinearLayout>