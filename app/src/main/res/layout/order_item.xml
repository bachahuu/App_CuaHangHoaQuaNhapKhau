<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="?android:attr/selectableItemBackground">

    <!-- Main content row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Thông tin đơn hàng -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingEnd="16dp">

            <TextView
                android:id="@+id/order_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mã đơn hàng: #12345"
                android:textSize="12sp"
                android:textColor="#333333" />

            <TextView
                android:id="@+id/order_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày: 25/04/2025"
                android:textSize="12sp"
                android:textColor="#666666" />
            <TextView
                android:id="@+id/order_phuongthucthanhtoan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phương thức: Tiền mặt"
                android:textSize="12sp"
                android:textColor="#666666" />

            <TextView
                android:id="@+id/order_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trạng thái: Đang giao"
                android:textSize="12sp"
                android:textColor="#4CAF50" />
        </LinearLayout>

        <!-- Tổng tiền -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end">

            <TextView
                android:id="@+id/order_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tổng: 500.000đ"
                android:textSize="14sp"
                android:textColor="#333333" />
        </LinearLayout>
    </LinearLayout>

    <!-- Xem chi tiết button -->
    <Button
        android:id="@+id/btn_view_detail"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:text="Xem chi tiết"
        android:textSize="12sp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:layout_gravity="end"
        android:background="@drawable/button_rounded"
        android:textColor="#FFFFFF" />

</LinearLayout>