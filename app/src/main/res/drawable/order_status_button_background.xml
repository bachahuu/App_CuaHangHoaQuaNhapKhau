<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#FF9800" /> <!-- Màu cam khi được chọn -->
            <stroke android:width="1dp" android:color="#000000" /> <!-- Viền đen -->
            <corners android:radius="4dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Màu trắng khi không được chọn -->
            <stroke android:width="1dp" android:color="#000000" /> <!-- Viền đen -->
            <corners android:radius="4dp" />
        </shape>
    </item>
</selector>